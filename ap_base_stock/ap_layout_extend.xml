<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_picking_ap" inherit_id="stock.report_picking">
            <xpath expr="//div[@class='col-xs-6']" position="replace">
                <div style="width:20px;margin-bottom:130px;"></div>
               <div class="col-xs-6">
                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                        <span><strong>Vendor Address:</strong></span>
                    </div>
                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                        <span><strong>Warehouse Address:</strong></span>
                    </div>
                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                        <span><strong>Customer Address:</strong></span>
                    </div>
                    <div t-if="o.partner_id" name="partner_header">
                        <div t-field="o.partner_id"
                           t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true, "phone_icons": true}'/>
                        <p t-if="o.sudo().partner_id.vat">VAT: <span t-field="o.sudo().partner_id.vat"/></p>
						<p t-if="o.sudo().partner_id.reg">Reg: <span t-field="o.sudo().partner_id.reg"/></p>
                    </div>
                </div>
               </xpath>
        </template>

        <template id="report_delivery_document_ap" inherit_id="stock.report_delivery_document">
            <xpath expr="//div[@class='col-xs-4 pull-right']" position="replace">
                <div style="width:20px;margin-bottom:130px;"></div>
                    <div class="col-xs-4 pull-right">
                        <div>
                            <span><strong>Customer Address:</strong></span>
                        </div>
                        <div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header">
                            <div t-field="o.move_lines[0].partner_id"
                               t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
							   <div t-if="o.sudo().partner_id.vat">VAT: <span t-field="o.sudo().partner_id.vat"/></div>
						       <div t-if="o.sudo().partner_id.reg">Reg: <span t-field="o.sudo().partner_id.reg"/></div>
                        </div>
                        <div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header">
                            <div t-field="o.partner_id"
                               t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
							   <div t-if="o.sudo().partner_id.vat">VAT: <span t-field="o.sudo().partner_id.vat"/></div>
						       <div t-if="o.sudo().partner_id.reg">Reg: <span t-field="o.sudo().partner_id.reg"/></div>
                        </div>
                    </div>
               </xpath>
        </template>


    </data>
</odoo>
