	<odoo>
	<data>
        <template id="report_saleorder_document_ap" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@class='col-xs-6']" position="replace">
                <div style="width:20px;margin-bottom:130px;"></div>
                <div class="col-xs-6"> <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping address:</strong>
                    <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address:</strong>
                    <div t-field="doc.partner_invoice_id" t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true, "phone_icons": true}'/>
                    <div t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_id.vat"/></div>
                    <p t-if="doc.partner_id.reg">Reg: <span t-field="doc.partner_id.reg"/></p>
                    <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
                        <strong>Shipping address:</strong> <div t-field="doc.partner_shipping_id" t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true, "phone_icons": true}'/>
                        <div t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_shipping_id.vat"/></div>
                        <div t-if="doc.partner_id.reg">Reg: <span t-field="doc.partner_shipping_id.reg"/></div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
